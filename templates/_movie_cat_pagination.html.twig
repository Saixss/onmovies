{% set queryParams = app.request.query.all %}
<nav class="d-flex m-4 justify-content-center">
    <ul class="pagination flex-wrap">
        {% if paginator.prev %}
            <li class="page-item lh-lg">
                <a class="page-link" href="{{ path('genre', {'genre': genre, 'page': paginator.prev}|merge(queryParams)) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        {% endif %}
        {% set active = '' %}
        {% for i in visiblePages %}
            {% if i == paginator.currPage %}
                {% set active = 'active' %}
            {% else %}
                {% set active = '' %}
            {% endif %}
            <li class="page-item lh-lg {{ active }}">
                {% if i != 1 %}
                <a class="page-link" href="{{ path('genre', { 'genre': genre, 'page': i }|merge(queryParams)) }}">
                    {% else %}
                    <a class="page-link" href="{{ path('genre_index', { 'genre': genre}|merge(queryParams)) }}">
                        {% endif %}
                        {{ i }}
                    </a>
            </li>
        {% endfor %}
        {% if paginator.next %}
            <li class="page-item lh-lg">
                <a class="page-link" href="{{ path('genre', {'genre': genre, 'page': paginator.next}|merge(queryParams)) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>

