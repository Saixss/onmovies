{% extends 'base.html.twig' %}

{% block content %}
    <div class="row gy-4 justify-content-start">
        {% for movie in movies %}
            <div class="col">
                <div class="movie">
                    <a href="{{ path('movie_details', {'id': movie.id, 'urlTitle': movie.urlTitle }) }}">
                        <img src="{{ movie.posterUrl }}" alt="{{ movie.title }}" class="movie-poster">
                    </a>
                    <div class="movie-details">
                        <a href="{{ path('movie_details', {'id': movie.id, 'urlTitle': movie.urlTitle }) }}">
                            {{ movie.getTitle }}
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ pages|raw }}
{% endblock %}