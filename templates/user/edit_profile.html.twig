{% extends 'base.html.twig' %}

{% block content %}
    <section class="gradient-custom-2">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-12 col-xl-9">
                    <div class="card">
                        {{ form_start(form) }}
                            <div class="rounded-top text-white d-flex flex-row" style="background-color: #787976; height:200px;">
                                <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                    {% set profilePicture = asset('uploads/user/profile-picture/default-user-icon.jpg') %}
                                    {% if user.profilePictureFilename %}
                                        {% set profilePicture = asset('uploads/user/profile-picture/' ~ user.profilePictureFilename) %}
                                    {% endif %}
                                    <div style="width: 150px; z-index: 1">
                                        <img src="{{ profilePicture }}"
                                             alt="Generic placeholder image" id="profile-picture" class="img-fluid img-thumbnail mt-4 mb-2"
                                             style="width: 100%; height: 200px; object-fit: fill;">
                                    </div>
                                    {{ form_row(form.profilePicture) }}
                                    <a type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                                            style="z-index: 1;" onclick="document.getElementById('user_profilePicture').click()">
                                        Edit picture
                                    </a>
                                </div>
                                <div class="ms-3" style="margin-top: 130px;">
                                    <h5>{{ user.fullName }}</h5>
                                </div>
                            </div>
                            <div class="p-5 text-black" style="background-color: #f8f9fa;">
                                <div class="d-flex justify-content-start py-1">
                                    <div>
                                        <p class="mb-1">{{ form_errors(form.profilePicture) }}</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end text-center py-1">
                                    <div>
                                        <p class="mb-1 h5">{{ user.favorites.count }}</p>
                                        <p class="small text-muted mb-0">Favorite movies</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4 text-black">
                                <div class="mb-5">
                                    <p class="lead fw-normal mb-1">About</p>
                                    <div class="p-4" style="background-color: #f8f9fa;">
                                        <p class="font-italic mb-1">{{ form_label(form.username) }}</p>
                                        <div class="form-outline mb-4">
                                            {{ form_widget(form.username) }}
                                        </div>
                                        <p class="font-italic mb-1">{{ form_label(form.firstName) }}</p>
                                        <div class="form-outline mb-4">
                                            {{ form_widget(form.firstName) }}
                                        </div>
                                        <p class="font-italic mb-0">{{ form_label(form.lastName) }}</p>
                                        <div class="form-outline mb-4">
                                            {{ form_widget(form.lastName) }}
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                                   style="z-index: 1;">
                                    Edit
                                </button>
